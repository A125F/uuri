README="00-README-ls-alR"
ls -R > ${README}.txt

mkindex() {
    cd $1
    cat > index.md << NNNN
    ---
    layout: "urls"
    ---
    NNNN

    cat >> index.md << NNNN
    NNNN
    cd ..
}

cat > index.md << NNNN
---
layout: "urls"
---
NNNN

for II in \
    00-README-ls-alR.txt \
    45UUD \
    IDX \
    INPRES \
    KEPMEN \
    KEPPRES \
    MK \
    MPR \
    PERDA \
    PERKA \
    PERMEN \
    PERPRES \
    PERPU \
    pictures \
    PP \
    SKB \
    UI \
    UU \
; do
    [ -f $II ] && echo "* [$II]($II)"   >> index.md
    [ -d $II ] && echo "* [$II]($II/)"  >> index.md
    [ -d $II ] && mkindex($II)
done

cat >> index.md << NNNN
NNNN

exit 0

